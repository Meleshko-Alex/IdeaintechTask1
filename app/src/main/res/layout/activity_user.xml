<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="meleshko.com.ideaintechtask1.ui.activities.UserActivity">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="49dp"
        android:text="User name:"/>

    <TextView
        android:id="@+id/bd_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:text=" "/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView13"
        android:layout_alignRight="@+id/textView13"
        android:layout_below="@+id/textView13"
        android:layout_marginTop="20dp"
        android:text="Avatar:"/>

    <TextView
        android:id="@+id/bd_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bd_name"
        android:layout_alignStart="@+id/bd_name"
        android:layout_alignTop="@+id/textView15"
        android:text=" "/>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView15"
        android:layout_alignRight="@+id/textView15"
        android:layout_below="@+id/textView15"
        android:layout_marginTop="20dp"
        android:text="Role:"/>

    <TextView
        android:id="@+id/bd_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bd_avatar"
        android:layout_alignStart="@+id/bd_avatar"
        android:layout_alignTop="@+id/textView17"
        android:text=" "/>

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView17"
        android:layout_alignRight="@+id/textView17"
        android:layout_below="@+id/textView17"
        android:layout_marginTop="19dp"
        android:text="Phones:"/>

    <TextView
        android:id="@+id/bd_phone_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bd_role"
        android:layout_alignStart="@+id/bd_role"
        android:layout_alignTop="@+id/textView19"
        android:text=" "/>

    <TextView
        android:id="@+id/bd_phone_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bd_phone_1"
        android:layout_alignStart="@+id/bd_phone_1"
        android:layout_below="@+id/bd_phone_1"
        android:layout_marginTop="16dp"
        android:text=" "/>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView19"
        android:layout_alignRight="@+id/textView19"
        android:layout_below="@+id/bd_phone_2"
        android:layout_marginTop="19dp"
        android:text="Emails:"/>

    <TextView
        android:id="@+id/bd_email_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bd_phone_2"
        android:layout_alignStart="@+id/bd_phone_2"
        android:layout_alignTop="@+id/textView22"
        android:text=" "/>

    <TextView
        android:id="@+id/bd_email_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bd_email_1"
        android:layout_alignStart="@+id/bd_email_1"
        android:layout_below="@+id/bd_email_1"
        android:layout_marginTop="18dp"
        android:text=" "/>
</RelativeLayout>
