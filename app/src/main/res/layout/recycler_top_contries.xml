<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_toRightOf="@+id/rl_recycler_country"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:id="@+id/recyc_item_rl">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ua"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/recyc_item_image"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/recyc_item_image"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/recyc_tv_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/navy"
            android:textSize="16sp"
            android:text="South Africa"/>
        <TextView
            android:id="@+id/recyc_tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/navy"
            android:alpha="0.54"
            android:textSize="14sp"
            android:text="@string/from_0_015_gbp_min"/>
    </LinearLayout>
    
    <ImageView
        android:id="@+id/recyc_right_img"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_right_bluegray_24dp"/>

</RelativeLayout>