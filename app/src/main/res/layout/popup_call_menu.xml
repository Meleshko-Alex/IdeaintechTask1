<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@drawable/popup_menu_radius"
              android:layout_height="373dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="35dp">
        <ImageView
            android:id="@+id/popup_call_menu_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/nof"/>
        <TextView
            android:id="@+id/popup_call_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/popup_call_menu_image"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/navy"
            android:textSize="20sp"
            android:text="Anna Smith"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/popup_call_menu_image"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="17dp"
            android:textColor="@color/nice_blue"
            android:textSize="14sp"
            android:text="EDIT CONTACT"/>
        <ImageView
            android:id="@+id/popup_call_menu_topup_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/top_up"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="7dp"
            android:textSize="12sp"
            android:textColor="@color/navy"
            android:alpha="0.54"
            android:text="5 min. left"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/popup_call_menu_flag"
            android:layout_width="16dp"
            android:layout_height="11dp"
            android:layout_marginTop="23dp"
            android:layout_marginLeft="24dp"
            android:src="@drawable/gb"/>
        <TextView
            android:id="@+id/popup_call_menu_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/popup_call_menu_flag"
            android:layout_marginTop="17dp"
            android:textColor="@color/navy"
            android:textSize="16sp"
            android:text="+44 1234 567890"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/popup_call_menu_flag"
            android:layout_below="@+id/popup_call_menu_number"
            android:layout_marginTop="5dp"
            android:textColor="@color/navy"
            android:textSize="14sp"
            android:layout_marginLeft="20dp"
            android:alpha="0.54"
            android:text="Â£0.015 GBP/min"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:orientation="horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginTop="17dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textColor="@color/navy"
                android:layout_gravity="center_vertical"
                android:alpha="0.54"
                android:textSize="12sp"
                android:text="default"/>
            <ImageView
                android:id="@+id/popup_call_menu_ok_btn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_check_circle_green_24dp"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="16dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="9dp"
            android:layout_weight="1"
            android:src="@drawable/button_free_call"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:src="@drawable/button_mobile_call"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:background="@color/light_blue_grey">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:textColor="@color/bluegrey"
            android:text="Recent"
            android:textSize="16sp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="17dp"
        android:paddingLeft="16dp"
        android:background="#eaf7fd">
        <TextView
            android:id="@+id/popup_call_menu_recent_number"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/navy"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="+44 1234 567890"/>
        <ImageView
            android:id="@+id/popup_call_menu_arrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_call_made_24dp"
            android:layout_below="@+id/popup_call_menu_recent_number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="7dp"
            android:layout_toRightOf="@id/popup_call_menu_arrow"
            android:layout_below="@+id/popup_call_menu_recent_number"
            android:textColor="@color/navy"
            android:alpha="0.54"
            android:textSize="14sp"
            android:text="Today 11:23"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popup_call_menu_recent_number"
            android:layout_alignParentRight="true"
            android:textColor="@color/navy"
            android:alpha="0.54"
            android:textSize="12sp"
            android:text="5:21 min"/>
    </RelativeLayout>
</LinearLayout>