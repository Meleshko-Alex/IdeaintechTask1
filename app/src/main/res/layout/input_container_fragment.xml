<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="@dimen/spacing_normal_16">

    <Button
        android:id="@+id/btn_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_gravity="center_horizontal"
        android:text="Add user"
        android:textColor="@color/navy"/>

        <EditText
            android:id="@+id/et_bd_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User name"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/et_bd_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Avanar"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/et_bd_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Role"
            android:textSize="12sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_bd_phones_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Phone_1"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/et_bd_phones_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/spacing_normal_16"
            android:hint="Phone_2"
            android:textSize="12sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_bd_emails_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Email_1"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/et_bd_emails_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal_16"
            android:layout_weight="1"
            android:hint="Email_2"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>