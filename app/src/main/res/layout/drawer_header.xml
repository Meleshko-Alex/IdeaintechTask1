<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_height"
    android:paddingTop="40dp"
    android:orientation="vertical"
    android:paddingRight="@dimen/spacing_normal_16"
    android:paddingLeft="@dimen/spacing_normal_16"
    android:background="@drawable/dark">

    <RelativeLayout
        android:layout_height="121dp"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/drawer_image"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

        <TextView
            android:id="@+id/drawer_name"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:text="John Smith"
            android:layout_below="@+id/drawer_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/drawer_email"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="johnsmith@mail.com"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:alpha="0.54"
            android:layout_below="@+id/drawer_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="2dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_transactions"
            android:layout_below="@+id/drawer_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:id="@+id/iv_profile"/>

        <ImageView
            android:id="@+id/log_out_icon"
            android:layout_width="@dimen/icon_size_24"
            android:layout_height="@dimen/icon_size_24"
            android:src="@drawable/ic_transactions"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/iv_profile"
            android:layout_alignStart="@+id/iv_profile"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOG OUT"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:alpha="0.54"
            android:layout_alignBottom="@+id/log_out_icon"
            android:layout_toLeftOf="@+id/log_out_icon"
            android:layout_toStartOf="@+id/log_out_icon"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="5dp"/>
    </RelativeLayout>

    <include layout="@layout/line_in_drawer"/>

    <LinearLayout
        android:id="@+id/ll_chat_settings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/icon_size_24"
            android:layout_height="@dimen/icon_size_24"
            android:src="@drawable/ic_transactions"
            android:layout_gravity="center_vertical"/>
        <TextView
            style="@style/drawer_text_menu"
            android:text="@string/chat_settings"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_notifications"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/icon_size_24"
            android:layout_height="@dimen/icon_size_24"
            android:src="@drawable/ic_transactions"
            android:layout_gravity="center_vertical"/>
        <TextView
            style="@style/drawer_text_menu"
            android:text="@string/notifications"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_invite_friends"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/icon_size_24"
            android:layout_height="@dimen/icon_size_24"
            android:src="@drawable/ic_transactions"
            android:layout_gravity="center_vertical"/>
        <TextView
            style="@style/drawer_text_menu"
            android:text="@string/invite_friends"/>
    </LinearLayout>

    <include layout="@layout/line_in_drawer"/>

    <LinearLayout
        android:id="@+id/ll_remittance_profile"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/icon_size_24"
            android:layout_height="@dimen/icon_size_24"
            android:src="@drawable/ic_transactions"
            android:layout_gravity="center_vertical"/>
        <TextView
            style="@style/drawer_text_menu"
            android:text="@string/remittance_profile"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_transactions"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/icon_size_24"
            android:layout_height="@dimen/icon_size_24"
            android:src="@drawable/ic_transactions"
            android:layout_gravity="center_vertical"/>
        <TextView
            style="@style/drawer_text_menu"
            android:text="@string/transactions"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_beneficiaries"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/icon_size_24"
            android:layout_height="@dimen/icon_size_24"
            android:src="@drawable/ic_transactions"
            android:layout_gravity="center_vertical"/>
        <TextView
            style="@style/drawer_text_menu"
            android:text="@string/beneficiaries"/>
    </LinearLayout>

    <include layout="@layout/line_in_drawer"/>

    <LinearLayout
        android:id="@+id/ll_help"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/icon_size_24"
            android:layout_height="@dimen/icon_size_24"
            android:src="@drawable/ic_transactions"
            android:layout_gravity="center_vertical"/>
        <TextView
            style="@style/drawer_text_menu"
            android:text="@string/help"/>
    </LinearLayout>

    <include layout="@layout/line_in_drawer"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_normal_16"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:alpha="0.54"
        android:layout_marginTop="12dp"
        android:gravity="right"
        android:text="@string/ltd"/>


</LinearLayout>