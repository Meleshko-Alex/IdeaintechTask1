<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#edeff0"
              android:layout_width="match_parent"
              android:layout_height="320dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="224dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btn_key_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    style="@style/DigitalNumber"
                    android:text="1"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btn_key_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    style="@style/DigitalNumber"
                    android:layout_centerVertical="true"
                    android:text="2"/>

                <TextView
                    style="@style/DigitalLetter"
                    android:layout_alignBaseline="@+id/textView3"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/textView3"
                    android:layout_toRightOf="@+id/textView3"
                    android:text="ABC"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_key_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    style="@style/DigitalNumber"
                    android:layout_centerVertical="true"
                    android:text="3"/>

                <TextView
                    style="@style/DigitalLetter"
                    android:layout_alignBaseline="@+id/textView4"
                    android:layout_alignBottom="@+id/textView4"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/textView4"
                    android:layout_toRightOf="@+id/textView4"
                    android:text="DEF"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/btn_key_dash"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/DigitalNumber"
                    android:text="-"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/btn_key_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    style="@style/DigitalNumber"
                    android:layout_centerVertical="true"
                    android:text="4"/>

                <TextView
                    style="@style/DigitalLetter"
                    android:layout_alignBaseline="@+id/textView5"
                    android:layout_alignBottom="@+id/textView5"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/textView5"
                    android:layout_toRightOf="@+id/textView5"
                    android:text="GHI"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_key_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    style="@style/DigitalNumber"
                    android:layout_centerVertical="true"
                    android:text="5"/>

                <TextView
                    style="@style/DigitalLetter"
                    android:layout_alignBaseline="@+id/textView6"
                    android:layout_alignBottom="@+id/textView6"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/textView6"
                    android:layout_toRightOf="@+id/textView6"
                    android:text="JKL"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_key_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    style="@style/DigitalNumber"
                    android:layout_centerVertical="true"
                    android:text="6"/>

                <TextView
                    style="@style/DigitalLetter"
                    android:layout_alignBaseline="@+id/textView7"
                    android:layout_alignBottom="@+id/textView7"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/textView7"
                    android:layout_toRightOf="@+id/textView7"
                    android:text="MNO"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/btn_key_point"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/DigitalNumber"
                    android:text="."/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/btn_key_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    style="@style/DigitalNumber"
                    android:layout_centerVertical="true"
                    android:text="7"/>

                <TextView
                    style="@style/DigitalLetter"
                    android:layout_alignBaseline="@+id/textView8"
                    android:layout_alignBottom="@+id/textView8"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/textView8"
                    android:layout_toRightOf="@+id/textView8"
                    android:text="PQRS"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_key_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    style="@style/DigitalNumber"
                    android:layout_centerVertical="true"
                    android:text="8"/>

                <TextView
                    style="@style/DigitalLetter"
                    android:layout_alignBaseline="@+id/textView9"
                    android:layout_alignBottom="@+id/textView9"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/textView9"
                    android:layout_toRightOf="@+id/textView9"
                    android:text="TUV"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_key_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    style="@style/DigitalNumber"
                    android:layout_centerVertical="true"
                    android:text="9"/>

                <TextView
                    style="@style/DigitalLetter"
                    android:layout_alignBaseline="@+id/textView10"
                    android:layout_alignBottom="@+id/textView10"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/textView10"
                    android:layout_toRightOf="@+id/textView10"
                    android:text="WXYZ"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/btn_key_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_keyboard_backspace_black_24dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/btn_key_star"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="24dp"
                    android:alpha="0.6"
                    android:text="*"
                    android:textSize="35sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.6"
                    android:text="#"
                    android:layout_marginStart="10dp"
                    android:textColor="#37474f"
                    android:textSize="27sp"
                    android:layout_alignTop="@+id/textView15"
                    android:layout_toRightOf="@+id/textView15"
                    android:layout_toEndOf="@+id/textView15"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/btn_key_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="#37474f"
                    android:textSize="27sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.6"
                    android:gravity="left|center"
                    android:text="+"
                    android:textColor="#37474f"
                    android:textSize="27sp"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/btn_key_leng"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="28dp"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:alpha="0.6"
                    android:background="#37474f"/>

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0.6"
                    android:text="English"
                    android:textColor="#37474f"
                    android:textSize="14sp"/>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/btn_key_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_check_circle_36dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/call_btn"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="centerCrop"
            android:src="@drawable/call_btn"/>

    </LinearLayout>

</LinearLayout>